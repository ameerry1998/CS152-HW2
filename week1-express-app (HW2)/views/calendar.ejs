<script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/js/bootstrap-datetimepicker.min.js"></script>
<script>
        var dateArray = new Array();
</script>


<body>
    <main class="container">
        <header class="col-sm-12">
            <span>Bootstrap Calender</span>
        </header>
        <section class="col-sm-12">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" id="pickeddate"/>
                    <span class="input-group-addon">
                            <span class="glyphicon glyphicon-calendar"></span>
                    </span>
                </div>
            </div>
            <center>
                <button type="button" class="btn btn-primary"  onclick="addDate()">Book Date</button>
                <button type="button" class="btn btn-primary" onclick="removeDate()">Delete Date</button>
            </center>
        </section>
        <footer>

        </footer>
    </main>
    <script type="text/javascript">
        $(function() {
            // $('#datetimepicker1').datetimepicker();
            $('#datetimepicker1').datetimepicker( {
                locale: moment().local('en'),
                format: 'YYYY-MM-DD'
            }); 
        });

        function addDate(){
            // Selecting the input element and get its value 
            var inputVal = document.getElementById("pickeddate").value;
            dateArray.push(inputVal)
    
            alert(dateArray.toString())
        }

        function removeDate(){
            // Selecting the input element and get its value 
            var newDateArray = new Array();
            for(var i =0; i<dateArray.length;i++){
                if(document.getElementById("pickeddate").value != dateArray[i]){
                    newDateArray.push(dateArray[i])
                }
            }
            dateArray = newDateArray
            alert(newDateArray.toString())
            // var inputVal = document.getElementById("pickeddate").value;
            //  dateArray.push(inputVal)
        }
</script>
